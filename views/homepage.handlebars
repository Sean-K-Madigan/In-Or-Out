{{#if logged_in}}

{{#each events as |event|}}
  <div class="card">
    <h2 class="title">{{event.title}}</h2>
    <p class="creator">Created by: {{event.created_by}}</p>
    <p class="category">{{event.category}}</p>
    <p class="description">{{event.description}}</p>
    <p class="participant-limit">Participant limit: {{event.participantLimit}}</p>
    <button id="join-button" class="join-button" data-id="{{event.id}}" data-user="{{../user.id}}">Join</button>
    <button class="delete-button" data-id="{{event.id}}">Hide</button>
  </div>

{{/each}}

{{else}}
  <div class="animate__animated animate__backInRight error-message rounded-pill">
    <h1>😵</h1>
    <h2 class="error-primary">404: No friends or activities found</h2>
    <h4 class="error-secondary">Are you sure you logged in?</h4>
    <p>(Visit the menu icon to find out ↗️)</p>
