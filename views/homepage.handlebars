{{#if logged_in}}
<div class=" d-flex flex-row flex-wrap justify-content-around">
  {{#each events as |event|}}
    <div class="grid-container">
  {{!-- <div class="col-12 col-sm-12 col-md-4 col-lg-3"> --}}
    {{#unless event.UserEvent.isHidden}}
        {{> eventCards event=event user_id=../user_id}}
    {{/unless}}
    {{/each}}
  </div>

{{else}}
  <div class="animate__animated animate__backInRight error-message rounded-pill">
    <h1>😵</h1>
    <h2 class="error-primary">404: No friends or activities found</h2>
    <h4 class="error-secondary">Are you sure you logged in?</h4>
    <p>(Visit the menu icon to find out ↗️)</p>
  </div>

</div>
{{/if}}