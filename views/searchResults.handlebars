<div class="users">
  <h2 class="full text-center">Users</h2>
  {{#each users}}
    <div class="user">
      <img src="{{avatar}}" alt="{{name}} Avatar">
      <h3>{{name}}</h3>
      <p>{{email}}</p>
    </div>
  {{/each}}
</div>

<div class="events">
  <h2 class="full text-center">Events</h2>
  {{!-- todo not sure if this syntax will work with the search --}}
  {{#each events as |event|}}
  <div class="grid-container">
    {{> eventCards }}
  </div>
{{/each}}
</div>