<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>In-Or-Out</title>
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
  <header>
    <img class="logo" src="images/logo.png" alt="In-Or-Out Logo">
    {{!-- Remove title --}}
    <h1>In-Or-Out</h1> 

    <div class="search">
      <form action="/search" method="GET">
        <input type="text" name="search" placeholder="Search...">
        <button type="submit">Search</button>
      </form>

      <button class="menu-toggle"></button>
    </div>
  </header>

  <nav class="navbar">
    <ul class="navigation">
      <li><a href="/">Home</a></li>
      {{#if loggedIn}}
      <li><a href="/create">Create Activity</a></li>
      <li><a href="#" id="logoutBtn">Logout</a></li>
      {{else}}
      <li><a href="#" id="loginBtn">Login</a></li>
      {{/if}}
    </ul>

    {{#if loggedIn}}
    <ul class="profile">
      <li><a href="/profile">Profile</a></li>
    </ul>
    {{/if}}
  </nav>

  {{#if !loggedIn}}
  <!-- Modal login -->
  <div class="modal fade" id="modalLogin" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal1Label">Login</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class="Login">
            <!-- Your form fields go here -->
            <input type="text" name="username" placeholder="Username">
            <input type="password" name="password" placeholder="Password">
            <button type="submit">Login</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="sign-up-btn">Sign Up</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal signup -->
  <div class="modal fade" id="modalSignUp" tabindex="-1" aria-labelledby="modal2Label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal2Label">Sign Up</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form class="SignUp">
            <!-- Your form fields go here -->
            <input type="text" name="name" placeholder="Name">
            <input type="text" name="username" placeholder="Username">
            <input type="text" name="hobbies" placeholder="Top 3 - 5 hobbies">
            <textarea name="bio" placeholder="Tell us about yourself ..."></textarea>
            {{!-- make users repeat passwords for registration --}}
            <input type="password" name="password" id="password" placeholder="Password">
            <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm Password">
            <button type="submit">Sign Up</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

  <main>
    {{{body}}}
  </main>

  <footer>
    <h2 class="sign-off">Go forth and find your peeps! ðŸ¤™</h2>
  </footer>

  <script src="scripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>